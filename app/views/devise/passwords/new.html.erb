<div class="col-md-6 col-md-offset-3" style="">
<div class="col-md-6 col-md-offset-3 login_border" style="">
<div class="col-md-6 col-md-offset-3"><h2>Forgot your password?</h2></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field row">
    <div class="col-md-8 col-md-offset-2"><%= f.label :email %></div>
    <div class="col-md-8 col-md-offset-2"><%= f.email_field :email, autofocus: true %></div>
  </div>
   <br>
  <div class="actions row">
    <div class="col-md-8 col-md-offset-2"><%= f.submit "Send me reset password",class: 'btn btn-primary' %></div>
  </div>
<% end %>
<div class="row">
<div class="col-md-8 col-md-offset-2"><%= render "devise/shared/links" %></div>
</div>
</div>
</div>